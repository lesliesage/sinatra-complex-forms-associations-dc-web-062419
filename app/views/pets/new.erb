<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet_name">
  <br>
  <label>Choose an existing owner:</label>
  <% @owners.each do |owner| %>
  <input type="checkbox" name="owner_id"
    value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <% end %>
  <br>
  <label>Or create a new one:</label>
  <label>New owner:</label>
    <input type="text" name="owner_name"></input>
    <br>
    <input type="submit" value="Create Pet"></input>
</form>
